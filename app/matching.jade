extends ./layouts/_htmlbp5

block extra-css
  link(rel='stylesheet', href='https://code.getmdl.io/1.1.3/material.deep_orange-indigo.min.css')
  link(rel='stylesheet', href='stylesheets/matching.css')

block main
  block iphone_menu
    include ./partials/_iphone_menu
  block main_menu
    include ./partials/_main_menu
  #wrapper
    block section-matching-0
      include ./partials/_section-matching-0
    block section-matching-1
      include ./partials/_section-matching-1
    block section-matching-2
      include ./partials/_section-matching-2
    block section-matching-3
      include ./partials/_section-matching-3
    
  
  block outdated
    include ./partials/_outdated
  
block scripts
  script(type='text/javascript', src='material-design-lite/material.min.js').
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js').
  script(type='text/javascript', src="http://malsup.github.com/jquery.form.js").
  
  script(type='text/javascript', src="js/material.min.js").
  script(type='text/javascript', src='js/handlebars-v3.0.3.js').
  script(type='text/javascript', src='js/js-webshim/minified/polyfiller.js').
  script(src='//www.parsecdn.com/js/parse-1.5.0.min.js').
  script(type='text/javascript', src='js/underscore-min.js').
  script(src='js/matching.js').
  //- script(type='text/javascript', src='js/home.js').
  script#year-template(type='text/x-handlebars-template').
    {{#each year}}
      <label class="mdl-radio mdl-js-radio mdl-js-ripple-effect" for="option-{{attributes.year}}">
        <input class="mdl-radio__button" id="option-{{attributes.year}}" type='radio' name='options' value='{{attributes.year}}' checked/>
        <span class="mdl-radio__label">Anno {{attributes.year}}</span>
      </label>
    {{/each}}
  script#student-template(type='text/x-handlebars-template').
    {{#each student}}
      <div class="row line-bottom">
        <div class="three columns career-profile career-profile-head">
            <div class="career-profile-head-pic">
                <img src="{{attributes.portrait._url}}" alt="student portrait" />
                </div>
                <div class="career-profile-head-name">
                    <h2>{{attributes.name}} {{attributes.surname}}</h2>
                    <p>{{attributes.course}}</p>
                </div>
                <div class="career-profile-head-button">
                    <button class="student mdl-button mdl-button-profile mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">Contatta
                        <span class="">
                            <span class=""></span>
                        </span>
                    </button>
                </div>
                <div class="contact-form mdl-card mdl-shadow--2dp">
                  <form id="matching-form" action="send-email.php" method="post">
                    <input type="hidden" name="Hidden"/>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <input id="sample1" type="text" name="Nome" required="required" class="mdl-textfield__input"/>
                      <label for="sample1" class="mdl-textfield__label">Nome Contatto</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <input id="sample2" type="text" name="Azienda" required="required" class="mdl-textfield__input"/>
                      <label for="sample2" class="mdl-textfield__label">Nome Azienda</label>
                    </div>
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                      <input id="sample3" type="email" name="Email" required="required" class="mdl-textfield__input"/>
                      <label for="sample3" class="mdl-textfield__label">Email</label>
                    </div>
                    <label for="checkbox-1" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
                      <input id="checkbox-1" type="checkbox" name="Check1" class="mdl-checkbox__input"/><span class="mdl-checkbox__label">Mobile App Design</span>
                    </label>
                    <label for="checkbox-2" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
                      <input id="checkbox-2" type="checkbox" name="Check2" class="mdl-checkbox__input"/><span class="mdl-checkbox__label">Coding</span>
                    </label>
                    <label for="checkbox-3" class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect">
                      <input id="checkbox-3" type="checkbox" name="Check3" class="mdl-checkbox__input"/><span class="mdl-checkbox__label">Videomaking</span>
                    </label>
                    <input id="richiedi" type="submit" name="sub" value="Richiedi" class="mdl-button mdl-button-sito mdl-js-button mdl-button--raised"/>
                  </form>
              </div>
            </div>
            <div class="seven columns career-profile career-profile-bio">
                <div class="career-profile-bio-title">
                    <p>Bio</p>
                </div>
                <div class="career-profile-bio-main">
                    <p>{{attributes.bio}}</p>
                </div>
            </div>
            <div class="six columns career-profile career-profile-skills">
                <div class="career-profile-bio-title">
                    <p>Skills</p>
                </div>
                <ul>
                  {{#each attributes.skills}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
          </div>
      </div>
    {{/each}}
  
  
