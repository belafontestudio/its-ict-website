extends ./layouts/_htmlbp5

block extra-css
  link(rel='stylesheet', href='material-design-lite/material.min.css')
  link(rel='stylesheet', href='stylesheets/material.min.css')
  link(rel='stylesheet', href='stylesheets/style.css')
  link(rel='stylesheet', href='js/pickadate.js-3.5.6/lib/compressed/themes/default.css')
  link(rel='stylesheet', href='js/pickadate.js-3.5.6/lib/compressed/themes/default.date.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/icon?family=Material+Icons')
  link(rel='stylesheet', href='stylesheets/register.css')

block main
  // iphone nav
  #menu.iphone
    #logo
      a(href='#home')
        img.scale-with-grid(src='images/istit/logo-its.png', alt='')
      .lingua
        a.lang(href='index.html') It
        a.lang2(href='index_en.html') En
    a#iphone_menu(href='#') MENU
    ul.iphone_menu
      li(data-menuanchor='home')
        a(href='http://www.its-ictpiemonte.it/') Home
      li.colored(data-menuanchor='registrati')
        a(href='registrati.html') Registrati
      li.colored(data-menuanchor='bandi')
        a(href='bandi.html') Bandi
  // end iphone nav
  // main nav
  ul#menu.group.noiphone
    #logo
      a(href='#home')
        img.scale-with-grid(src='images/istit/logo-its.png', alt='')
      .lingua
        a.lang(href='index.html') It
        a.lang2(href='index_en.html') En
    li.colored(data-menuanchor='bandi')
      a(href='bandi.html') Bandi
    li.colored(data-menuanchor='registrati')
      a(href='registrati.html') Registrati
    li(data-menuanchor='home')
      a(href='http://www.its-ictpiemonte.it/') Home
  // end main nav
  #section0.section.full
    #preloader
      #status  
    .mdl-grid.demo-content.noflow
      .mdl-shadow--2dp.mdl-color--white.mdl-cell.mdl-cell--5-col.mdl-cell--12-col-phone.register.fix
        img#itslogo(src='images/istit/logo-its.png', alt='')
        i.mdl-color-text--blue-grey-400.material-icons person
        h1 Profilo
        p
          | Completalo entro la data di chiusura del bando di candidatura, finchè il bando rimane aperto potrai modificare il tuo profilo
        form#update(method='post', action='/login.html')
          form#signup(method='post', action='/registrati.html')
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#name.mdl-textfield__input(name='name', type='text')
              label.mdl-textfield__label(for='name') Nome
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#surname.mdl-textfield__input(name='surname', type='text')
              label.mdl-textfield__label(for='surname') Cognome
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#email.mdl-textfield__input(name='email', type='email')
              label.mdl-textfield__label(for='email') Email
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input#fiscale.mdl-textfield__input(name='fiscale', type='text')
              label.mdl-textfield__label(for='fiscale') Codice fiscale
            p
              | I seguenti documenti sono obbligatori e devono essere caricati:
              b CV e Lettera di accompagnamento
              | ,
              | 									carica anche altre certificazioni per ottenere un punteggio migliore
            table.mdl-cell.mdl-cell--12-col.mdl-data-table.mdl-data-table--selectable.mdl-shadow--2dp
              thead
                tr
                  // <th class="mdl-data-table__cell--non-numeric">Creazione</th>
                  th.mdl-data-table__cell--non-numeric Titolo
                  th.mdl-data-table__cell--non-numeric Azioni
              tbody#attachments
            .button-righest
              a#submit.mdl-button.mdl-button--colored.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(href='/aggiungi_pdf.html') Aggiungi PDF
            .mdl-textfield.mdl-js-textfield
              input#birthday.mdl-textfield__input.datepicker(name='birthday', type='datetime')
              label.birthday.mdl-textfield__label(for='birthday') Data di nascita
            #courses.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect(for='checkbox-1')
                input#checkbox-1.mdl-checkbox__input(type='checkbox', data-grouprequired='', name='course', value='Mobile App Design')
                span#checkbox-1-label.mdl-checkbox__label Mobile App Design
              label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect(for='checkbox-2')
                input#checkbox-2.mdl-checkbox__input(type='checkbox', data-grouprequired='', name='course', value='Videomaking')
                span#checkbox-2-label.mdl-checkbox__label Videomaking
            .button-right
              button#logout.mdl-button.mdl-button--colored.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(value='logout')
                | Logout
                span.mdl-button__ripple-container
                  span.mdl-ripple
              button#submit.mdl-button.mdl-button--colored.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(type='submit', value='Log In')
                | Salva Candidatura
                span.mdl-button__ripple-container
                  span.mdl-ripple
            input#userid(type='hidden')
  script#attachment-template(type='text/x-handlebars-template').
    {{#each attachment}}
    <tr>
    <!-- <td class="mdl-data-table__cell--non-numeric">
    {{createdAt}}
    </td> -->
    <td class="mdl-data-table__cell--non-numeric truncate">
    <a href="{{attributes.url}}" target="_blank">{{attributes.title}}</a>
    </td>
    <td class="mdl-data-table__cell--non-numeric">
    <form class='delete link_button_form' method='post' action='{{id}}'>
    <input type='hidden' name='_method' value='DELETE' />
    <input class="mdl-button mdl-button--colored mdl-js-button.mdl-js-ripple-effect link_button" type='submit' value='Elimina' />
    </form>
    </td>
    </tr>
    {{/each}}
    
block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(type='text/javascript', src='material-design-lite/material.min.js')
  script(type='text/javascript', src='js/pickadate.js-3.5.6/lib/compressed/picker.js')
  script(type='text/javascript', src='js/pickadate.js-3.5.6/lib/compressed/picker.date.js')
  script(type='text/javascript', src='js/handlebars-v3.0.3.js')
  script(type='text/javascript', src='js/js-webshim/minified/polyfiller.js')
  script(src='//www.parsecdn.com/js/parse-1.5.0.min.js')
  script(type='text/javascript', src='js/underscore-min.js')
  script(type='text/javascript', src='js/moment-with-locales.min.js')
  script(type='text/javascript', src='js/profile.js')
  script.
    $( "#iphone_menu" ).click(function() {
    event.preventDefault();
    $( ".iphone_menu" ).toggle( "slow" );
    if ($(this).text() =="MENU")
    $(this).text("CHIUDI")
    else
    $(this).text("MENU");
    });
    $(window).load(function() { // makes sure the whole site is loaded
      $('#status').fadeOut(); // will first fade out the loading animation
      $('#preloader').delay(200).fadeOut('slow'); // will fade out the white DIV that covers the website.
      $('body').delay(350).css({'overflow':'visible'});
    })
